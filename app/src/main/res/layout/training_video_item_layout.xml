<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <import type="com.example.trainingdemoapp.models.VideosModel"/>
        <import type="com.example.trainingdemoapp.interfaces.VideoClickListener"/>
        <variable
            name="videoItemClick"
            type="com.example.trainingdemoapp.interfaces.VideoClickListener" />
        <variable
            name="video"
            type="VideosModel" />

    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/videoCardView"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="1dp"
        android:foreground="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/padding_8"
        android:background="@color/white"
        android:onClick="@{() -> videoItemClick.onVideoItemClicked(video)}"
        android:layout_margin="@dimen/margin_8"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="114dp"
                app:cardCornerRadius="12dp"
                android:elevation="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/bgcolor"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/ivThumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:scaleType="centerCrop"
                        backgroundImageUrl = "@{video}"
                        />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/video_view_height"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/shadow_bottom_to_top" />
                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/play" />
                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:visibility="@{video.isImageLoading?View.GONE:View.VISIBLE}"
                        android:layout_width="@dimen/margin_40"
                        android:layout_height="@dimen/margin_40"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/margin_16"
                        android:theme="@style/progressBarBlue"
                        />
                    <TextView
                        android:id="@+id/tvVideoTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/imageView2"
                        android:layout_alignStart="@id/imageView2"
                        capitalizeText='@{video.title, default="Title"}'
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12"
                        android:fontFamily="@font/ubuntu_medium"
                        android:textAlignment="textStart"
                        android:textAllCaps="false"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginStart="@dimen/margin_8"
                        android:layout_marginBottom="@dimen/margin_18"
                        android:layout_marginEnd="@dimen/margin_8"
                        android:layout_alignParentBottom="true" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_8"
                android:layout_marginBottom="@dimen/margin_12"
                android:padding="@dimen/padding_4"
                android:fontFamily="@font/ubuntu_regular"
                android:maxLines="3"
                android:ellipsize="end"
                capitalizeText='@{video.description, default="Description"}'
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>