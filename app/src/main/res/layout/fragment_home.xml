<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.trainingdemoapp.viewModels.HomeViewModel" />

        <variable
            name="view"
            type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bgcolor"
        tools:context=".fragments.HomeFragment">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_start"
            app:layout_constraintGuide_percent="0.06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_vertical_end"
            app:layout_constraintGuide_percent="0.94"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <androidx.core.widget.NestedScrollView
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_vertical_end"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/guideline_vertical_start"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="@dimen/zero_dp_dimension"
            android:layout_height="@dimen/zero_dp_dimension"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/padding_20"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/top_iv"
                    android:layout_width="@dimen/home_screen_image_width"
                    android:layout_height="@dimen/home_screen_image_height"
                    android:layout_marginTop="@dimen/margin_20"
                    android:scaleType="fitXY"
                    android:visibility="visible"
                    android:src="@drawable/ic_logo"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_15"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_3"
                        android:fontFamily="@font/geometosneuebold"
                        android:text="@string/welcome"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_20"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/geometosneuebold"
                        android:text="@string/john"
                        android:textAllCaps="true"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_size_20"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_today"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/radius_10"
                        android:layout_width="@dimen/zero_dp_dimension"
                        android:layout_height="@dimen/home_screen_card_height"
                        android:layout_marginVertical="@dimen/margin_5"
                        android:layout_marginStart="@dimen/margin_2"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_5">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:id="@+id/icon1"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_width="@dimen/margin_52"
                                android:layout_height="@dimen/margin_52"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/margin_16"
                                android:layout_marginTop="@dimen/margin_8"
                                android:contentDescription="@string/imagedes"
                                android:src="@drawable/ic_do_today" />

                            <TextView
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/icon1"
                                app:layout_constraintTop_toBottomOf="@+id/icon1"
                                android:layout_width="@dimen/zero_dp_dimension"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/margin_4"
                                android:layout_marginEnd="@dimen/margin_16"
                                android:fontFamily="@font/ubuntu_medium"
                                android:includeFontPadding="false"
                                android:text="@string/track_it"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_16" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_activities"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/radius_12"
                        android:layout_width="@dimen/zero_dp_dimension"
                        android:layout_height="@dimen/home_screen_card_height"
                        android:layout_marginVertical="@dimen/margin_5"
                        android:layout_marginStart="@dimen/margin_5"
                        android:layout_marginEnd="@dimen/margin_2"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_5">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:id="@+id/icon2"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/margin_52"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/margin_16"
                                android:layout_marginTop="@dimen/margin_8"
                                android:contentDescription="@string/imagedes"
                                android:src="@drawable/activitiesandtipsips"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:layout_width="@dimen/zero_dp_dimension"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/margin_4"
                                android:layout_marginEnd="@dimen/margin_16"
                                android:fontFamily="@font/ubuntu_medium"
                                android:includeFontPadding="false"
                                android:text="@string/activities_tips"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_16"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/icon2"
                                app:layout_constraintTop_toBottomOf="@+id/icon2" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_trackit"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/radius_10"
                        android:layout_width="@dimen/zero_dp_dimension"
                        android:layout_height="@dimen/home_screen_card_height"
                        android:layout_marginVertical="@dimen/margin_5"
                        android:layout_marginStart="@dimen/margin_2"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_5">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:id="@+id/icon3"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_width="@dimen/margin_52"
                                android:layout_height="@dimen/margin_52"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/margin_16"
                                android:layout_marginTop="@dimen/margin_8"
                                android:contentDescription="@string/imagedes"
                                android:src="@drawable/trackit" />

                            <TextView
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/icon3"
                                app:layout_constraintTop_toBottomOf="@+id/icon3"
                                android:layout_width="@dimen/zero_dp_dimension"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/margin_4"
                                android:layout_marginEnd="@dimen/margin_16"
                                android:fontFamily="@font/ubuntu_medium"
                                android:includeFontPadding="false"
                                android:text="@string/track_it"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_16" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_events"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/radius_12"
                        android:layout_width="@dimen/zero_dp_dimension"
                        android:layout_height="@dimen/home_screen_card_height"
                        android:layout_marginVertical="@dimen/margin_5"
                        android:layout_marginStart="@dimen/margin_5"
                        android:layout_marginEnd="@dimen/margin_2"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_5">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:id="@+id/icon4"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/margin_52"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/margin_16"
                                android:layout_marginTop="@dimen/margin_8"
                                android:contentDescription="@string/imagedes"
                                android:src="@drawable/events" />

                            <TextView
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/icon4"
                                app:layout_constraintTop_toBottomOf="@+id/icon4"
                                android:layout_width="@dimen/zero_dp_dimension"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/margin_4"
                                android:layout_marginEnd="@dimen/margin_16"
                                android:fontFamily="@font/ubuntu_medium"
                                android:includeFontPadding="false"
                                android:text="@string/events"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_16" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_traing"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/radius_10"
                        android:layout_width="@dimen/zero_dp_dimension"
                        android:layout_height="@dimen/home_screen_card_height"
                        android:layout_marginVertical="@dimen/margin_5"
                        android:layout_marginStart="@dimen/margin_2"
                        android:layout_marginEnd="@dimen/margin_5"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_5">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:id="@+id/icon5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_width="@dimen/margin_52"
                                android:layout_height="@dimen/margin_52"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/margin_16"
                                android:layout_marginTop="@dimen/margin_8"
                                android:contentDescription="@string/imagedes"
                                android:src="@drawable/training" />

                            <TextView
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/icon5"
                                app:layout_constraintTop_toBottomOf="@+id/icon5"
                                android:layout_width="@dimen/zero_dp_dimension"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/margin_4"
                                android:layout_marginEnd="@dimen/margin_16"
                                android:fontFamily="@font/ubuntu_medium"
                                android:includeFontPadding="false"
                                android:text="@string/traing"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_16" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_sayandshare"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/radius_10"
                        android:layout_width="@dimen/zero_dp_dimension"
                        android:layout_height="@dimen/home_screen_card_height"
                        android:layout_marginVertical="@dimen/margin_5"
                        android:layout_marginStart="@dimen/margin_5"
                        android:layout_marginEnd="@dimen/margin_2"
                        android:layout_weight="1"
                        android:padding="@dimen/padding_5">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:id="@+id/icon6"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:layout_width="@dimen/margin_52"
                                android:layout_height="@dimen/margin_52"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/margin_16"
                                android:layout_marginTop="@dimen/margin_8"
                                android:contentDescription="@string/imagedes"
                                android:src="@drawable/ic_say___share" />

                            <TextView
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="@+id/icon6"
                                app:layout_constraintTop_toBottomOf="@+id/icon6"
                                android:layout_width="@dimen/zero_dp_dimension"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/margin_4"
                                android:layout_marginEnd="@dimen/margin_16"
                                android:fontFamily="@font/ubuntu_medium"
                                android:includeFontPadding="false"
                                android:text="@string/sayandshare"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_16" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/qoute_view"
                    app:cardBackgroundColor="@color/cardbg"
                    app:cardCornerRadius="@dimen/radius_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:padding="@dimen/padding_5"
                    android:visibility="visible">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.appcompat.widget.AppCompatImageView
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/home_qoute_image_height"
                            android:background="@drawable/coma" />

                        <TextView
                            android:id="@+id/tv_quote"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_20"
                            android:fontFamily="@font/ubuntu"
                            android:gravity="center"
                            android:text="@string/dummyQoute"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_12" />

                        <TextView
                            android:id="@+id/textView2"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_quote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_quote"
                            android:layout_margin="@dimen/margin_20"
                            android:fontFamily="@font/ubuntu"
                            android:text="@string/dummyAuthor"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_12" />

                        <TextView
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_quote"
                            android:layout_margin="@dimen/margin_5"
                            android:fontFamily="@font/ubuntu_medium"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_12" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
