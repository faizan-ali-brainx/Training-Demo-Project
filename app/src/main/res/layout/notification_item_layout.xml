<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.example.trainingdemoapp.models.NotificationModel"/>
        <import type="com.example.trainingdemoapp.viewHolders.NotificationViewHolder"/>
        <import type="android.view.View"/>
        <variable
            name="position"
            type="Integer" />
        <variable
            name="notificationModel"
            type="NotificationModel" />
        <variable
            name="listener"
            type="com.example.trainingdemoapp.interfaces.NotificationClickListener" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/white"
        app:cardCornerRadius="12dp"
        android:elevation="1dp"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginBottom="6dp"
        android:layout_marginHorizontal="16dp"
        android:onClick="@{()->listener.onNotificationItemClicked(notificationModel)}"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/notification_view"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/notification_circle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/v2"
                android:visibility="@{notificationModel.pSeen?View.GONE:View.VISIBLE}"
                />
            <View
                android:id="@+id/v2"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:visibility='@{notificationModel.sent_by_role.equalsIgnoreCase("Admin") || notificationModel.sent_by_role== null? View.VISIBLE : View.GONE}'
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/name_tv" />
            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/v2"
                android:visibility='@{notificationModel.sent_by_role.equalsIgnoreCase("Admin")  || notificationModel.sent_by_role == null? View.GONE : View.VISIBLE}'
                capitalizeText='@{notificationModel.sent_by_name}'
                android:textAlignment="viewStart"
                android:fontFamily="@font/ubuntu_regular"
                android:textColor="@color/color_Black"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <View
                android:id="@+id/view_dot"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:visibility='@{notificationModel.sent_by_role.equalsIgnoreCase("Admin")  || notificationModel.sent_by_role== null? View.GONE : View.VISIBLE}'
                app:layout_constraintStart_toEndOf="@id/name_tv"
                app:layout_constraintTop_toBottomOf="@id/v2"
                app:layout_constraintEnd_toStartOf="@id/role_tv"
                app:layout_constraintBottom_toBottomOf="@id/name_tv"
                android:background="@drawable/ic_small_circle"
                />
            <TextView
                android:id="@+id/role_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toEndOf="@id/view_dot"
                app:layout_constraintTop_toBottomOf="@id/v2"
                android:visibility='@{notificationModel.sent_by_role.equalsIgnoreCase("Admin")  || notificationModel.sent_by_role== null ? View.GONE : View.VISIBLE}'
                capitalizeText='@{notificationModel.sent_by_role}'
                android:textAlignment="viewStart"
                android:fontFamily="@font/ubuntu_regular"
                android:textColor="@color/notification_time_color"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toStartOf="@+id/notification_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_tv"
                capitalizeText='@{notificationModel.title , default = "Continuing Education"}'
                android:textAlignment="viewStart"
                android:fontFamily="@font/ubuntu_medium"
                android:textColor="@color/headingcolor"
                android:textSize="15sp"
                android:maxLines="1"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toStartOf="@+id/notification_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title"
                capitalizeText='@{notificationModel.description , default = "Continuing Education"}'
                android:textAlignment="viewStart"
                android:fontFamily="@font/ubuntu_regular"
                android:textColor="@color/headingcolor"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintEnd_toStartOf="@+id/notification_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/_12m_ago"
                time="@{notificationModel.created_at}"
                android:textAlignment="viewStart"
                android:fontFamily="@font/proxima_nova_regular"
                android:textColor="@color/notification_time_color"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>